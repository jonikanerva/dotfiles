[core]
	autocrlf = input
	quotepath = false
	excludesfile = ~/.gitignore
	editor = code --wait
	preloadindex = true
	precomposeunicode = true
[user]
	name = Joni Kanerva
	email = jhonny@jhonny.org
	signingkey = 0E51DDBF00087D5509E59CEDCF7250EFB1D491E9
[merge]
	tool = Kaleidoscope
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[github]
	user = jonikanerva
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[alias]
	s = status
	b = branch
	f = fetch
	d = difftool
	co = checkout
	l = log --name-status
	pb = remote prune origin
	nm = branch -r --no-merged
	mm = branch -r --merged
	ri = rebase --interactive master
[difftool]
	prompt = false
[push]
	default = simple
[mergetool]
	keepBackup = false
	prompt = false
[credential]
	helper = osxkeychain
[commit]
	gpgsign = true
[url "git@github.com:"]
  insteadOf = https://github.com/
[pull]
	ff = only
